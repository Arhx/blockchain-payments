{
    "name": "arhx/blockchain-payments",
    "description": "Accept payments via blockchain.info",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Arhx",
            "email": "arhx.dev@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Arhx\\BlockchainPayments\\": "src\\"
        }
    },
    "require": {
        "ext-json": "*",
        "laravel/framework": "^5.6"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arhx\\BlockchainPayments\\BlockchainPaymentsServiceProvider"
            ]
        }
    },
    "scripts":{
        "post-package-install": [
            "@php artisan make:blockchain-payments",
            "@php artisan vendor:publish --provider=\"Arhx\\BlockchainPayments\\BlockchainPaymentsServiceProvider\" --tag=\"config\""
        ]
    }
}
